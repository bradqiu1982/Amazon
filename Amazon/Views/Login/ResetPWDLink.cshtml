
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<script src="~/Scripts/login.js" type="text/javascript"></script>

<script>
    $(function(){
        Login.init();
    })
</script>
<div id="login-body"></div>
<header>
    <span class="col-xs-3 logo"></span>
</header>
<div class="content">
    <div class="container">
        <div class="resetpwd-welcome">
            Reset Your Password
        </div>
        <div class="row login-form">
            <div class="col-xs-5">
                @if (ViewBag.UserName != null)
                {
                    <div><input class="restpwd-input" type="input" id="login_id" name="login_id" value="@ViewBag.UserName" readonly="readonly" /></div>
                }
                else
                {
                    <div><input class="restpwd-input" type="input" id="login_id" name="login_id" placeholder="Finisar Email" /></div>
                }
                <div>
                    <input class="restpwd-input" type="input" id="new_pwd" name="new_pwd" placeholder="New Password" />
                </div>
                <div>
                    <input class="restpwd-input" type="input" id="confirm_pwd" name="confirm_pwd" placeholder="Confirm Password" />
                </div>
                <div>
                    <input class="login-btn" type="button" id="resetpwd-submit" name="resetpwd-submit" value="Confirm" />
                </div>
            </div>
        </div>
</div>