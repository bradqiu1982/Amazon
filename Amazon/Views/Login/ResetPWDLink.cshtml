
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<script src="~/Scripts/login.js" type="text/javascript"></script>

<script>
    $(function(){
        Login.init();
    })
</script>
<div class="content">
    <div class="login-welcome">
        <div class="wel-span1">Amazon</div>
        <div class="wel-span2">System</div>
    </div>
    <div class="login-form-bg"></div>
    <div class="login-form">
        <div class="login-title">Reset your password</div>

        @if (ViewBag.UserName != null)
        {
            <div>
                <input class="form-control login-input" type="text" id="login_id" name="login_id" value="@ViewBag.UserName" readonly="readonly" />
            </div>
        }
        else
        {
            <div>
                <input class="form-control login-input" type="text" id="login_id" name="login_id" placeholder="Finisar Email" />
            </div>
        }
        <div>
            <input class="form-control login-input" type="password" id="new_pwd" name="new_pwd" placeholder="New Password" />
        </div>
        <div>
            <input class="form-control login-input" type="password" id="confirm_pwd" name="confirm_pwd" placeholder="Confirm Password" />
        </div>
        <div>
            <input class="btn login-btn" type="button" id="resetpwd-submit" name="resetpwd-submit" value="Confirm" />
        </div>
    </div>
</div>