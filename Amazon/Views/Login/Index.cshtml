
@{
    ViewBag.Title = "UserLogin";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<script src="~/Scripts/login.js" type="text/javascript"></script>

<script>
    $(function(){
        Login.init();
    })
</script>

<div class="content">
    <div class="login-welcome">
        <div class="wel-span1">Amazon</div>
        <div class="wel-span2">System</div>
    </div>
    <div class="login-form-bg"></div>
    <div class="login-form">
        <div class="login-title">LOG IN</div>
        <div>
            <input class="form-control login-input" type="text" id="login_id" name="login_id" placeholder="Finisar Email" />
        </div>
        <div>
            <input class="form-control login-input" type="password" id="login_pwd" name="login_pwd" placeholder="Default Password : abc@123" />
        </div>
        <div>
            <input class="btn login-btn" type="button" id="login-submit" name="login-submit" value="LOG IN" />
        </div>
        <div>
            <input class="login-checkbox" type="checkbox" id="remember_me" name="remember_me" checked />
            <span class="remember-me">Remember Me</span>
            <div class="div-forget-pwd">
                <a class="forget-pwd" href="#">Change password</a>
            </div>
        </div>
    </div>
</div>